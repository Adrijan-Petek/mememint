{
  "name": "mememint",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "dev:hardhat": "npx hardhat node",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "npx hardhat test",
    "test:gas": "cross-env REPORT_GAS=true npx hardhat test",
    "coverage": "npx hardhat coverage",
    "lint:sol": "npx solhint contracts/**/*.sol",
    "size": "npx hardhat compile && echo 'Contract compiled successfully'",
    "analyze": "npm run lint:sol && npm run size && npm run test:gas",
    "score": "npm run analyze && npm run coverage",
    "audit": "npm run score && echo 'Manual security review recommended for production'",
    "slither": "slither contracts/",
    "mythril": "mythril analyze contracts/MemeMint.sol --solc-json hardhat.config.js",
    "deploy": "npx hardhat run scripts/deploy.cjs --network localhost",
    "deploy:base": "npx hardhat run scripts/deploy.cjs --network base",
    "verify:base": "npx hardhat verify --network base"
  },
  "dependencies": {
    "@farcaster/miniapp-sdk": "^0.2.1",
    "@farcaster/miniapp-wagmi-connector": "^1.1.0",
    "@openzeppelin/contracts": "^4.9.3",
    "@openzeppelin/contracts-upgradeable": "^4.9.3",
    "@rainbow-me/rainbowkit": "^2.2.10",
    "@tailwindcss/postcss": "^4.1.18",
    "@tanstack/react-query": "^5.81.5",
    "dotenv": "^17.2.2",
    "ethers": "^6.15.0",
    "mime-types": "^3.0.1",
    "next": "16.0.10",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "sharp": "^0.34.4",
    "viem": "^2.31.6",
    "wagmi": "^2.16.3"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@farcaster/quick-auth": "^0.0.7",
    "@next/eslint-plugin-next": "^15.3.4",
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@nomicfoundation/hardhat-toolbox": "^6.1.0",
    "@openzeppelin/hardhat-upgrades": "^3.9.1",
    "@openzeppelin/test-helpers": "^0.5.16",
    "@types/mime-types": "^3.0.1",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.22",
    "cross-env": "^10.1.0",
    "eslint": "^9",
    "eslint-config-next": "15.3.4",
    "hardhat": "^2.26.3",
    "hardhat-gas-reporter": "^2.3.0",
    "postcss": "^8.5.6",
    "solhint": "^6.0.1",
    "solidity-coverage": "^0.8.16",
    "tailwindcss": "^4.1.18",
    "typescript": "^5"
  }
}
